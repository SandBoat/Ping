@model DataSource.User
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.UserName, new { @class = "col-md-3 control-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", required = "required", placeholder = "用户名" })
        </div>
        <div class="col-md-9 col-md-offset-3 error-text">
            @Html.ValidationMessageFor(x => x.UserName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "col-md-3 control-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Password, new { @type = "password", @class = "form-control", @required = "required" })
        </div>
        <div class="col-md-9 col-md-offset-3 error-text">
            @Html.ValidationMessageFor(x => x.Password)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <button class="btn btn-warning btn-lg btn-block" type="submit" style="margin-bottom:10px">登录</button>
            <a href="~/Org/Register">没有账号？去注册</a>
        </div>
    </div>
}
