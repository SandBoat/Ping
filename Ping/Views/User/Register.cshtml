@model Ping.Models.RegisterModels

@{
    ViewBag.Title = "Register";
    ViewBag.Css = new string[]{
        "~/Content/css/register.css"
    };
}
@using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="holder">
        <div class="grid-cell u-35"><p>请输入用户名</p></div>
        <input type="text" name="UserName" class="grid-cell u-65">
        <div class="grid-cell u-35"><p>请输入密码</p></div>
        <input type="text" name="Password" class="grid-cell u-65">
        <div class="grid-cell u-35"><p>请再输入一次密码</p></div>
        <input type="text" name="Password2" class="grid-cell u-65">
        <button type="submit" class="grid-cell for-button">提交</button>
    </div>
}
